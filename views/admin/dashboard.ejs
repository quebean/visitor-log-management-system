<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../base.ejs') %> 
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Baste Visitor</title>
    <link rel="stylesheet" href="css/dashboard.css">

<body>
   <div class="wrapper">
        <nav>
            <div class="nav-container">
                <div class="brand-container">
                    <a href="/admin/dashboard">
                        <img src="assets/seal.png" alt="" width="100px">
                        <h1>Baste Visitor</h1>
                    </a>
                </div>
                <div class="navigation">
                    <ul class="nav-links">
                        <li class="nav-item active"><a href="admin/dashboard">Dashboard</a></li>
                        <li class="nav-item"><a href="admin/visit">Visit List</a></li>
                        <li class="nav-item"><a href="admin/covid">Covid List</a></li>
                        <li class="nav-item"><a href="admin/office">Office List</a></li>
                        <li class="nav-item"><a href="admin/office/create">Create Office</a></li>
                        <li class="nav-item"><a href="admin/scanner">Scanner</a></li>
                        <li class="nav-item"><a href="admin/update">Change Password</a></li>
                        <li class="nav-item"><a href="auth/logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <main>
            <div class="main-container">
                <div class="title">
                    <h1>San Sebastian College Recoletos de Cavite Visitor Log System</h1>
                </div>
                <div class="titlepage">
                    <h1>Dashboard</h1>
                </div>
                        
                <div class="main-dashboard">
                    <div class="top">

                        <div class="counter">
                            <div class="detail-widgets">
                                <h1>Daily Counter</h1>
                                <div>
                                    <h1 class="count">0</h1>
                                </div>
                            </div>
                        </div>

                        <div class="bar-graph">
                            <div class="detail-widgets">
                                <h1>Last 7 Days Report</h1>
                                <div class="bar-box">
                                    <canvas id="bar-graph"></canvas>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="bottom">

                        <div class="pie-chart">
                            <div class="detail-widgets">
                                <h1>Monthly Offices Log Distribution</h1>
                                <div class="pie-box">
                                    <canvas id="pie-chart"></canvas>
                                </div>
                            </div>
                        </div>

                        <div class="top-three">
                            <div class="detail-widgets">
                                <h1>Top 3 Visited Office</h1>
                                <div class="top-three-box">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
   </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
<script src="js/dashboard.js"></script>
</html>